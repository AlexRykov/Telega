<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    style="@style/settings_btn"
    android:layout_margin="@dimen/horizontal_margin"
    android:layout_height="wrap_content">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/settings_user_photo_width"
        android:layout_height="@dimen/settings_user_photo_height"
        android:src="@drawable/person_outline_out_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/contact_photo">

    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/contact_fullname"
        style="@style/normal_text"
        android:text="@string/adam_tomas"
        app:layout_constraintStart_toEndOf="@id/contact_photo"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>
    <TextView
        android:id="@+id/contact_f"
        style="@style/small_text"
        android:text="@string/online"
        app:layout_constraintStart_toEndOf="@id/contact_photo"
        app:layout_constraintTop_toBottomOf="@id/contact_fullname"
        >
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>